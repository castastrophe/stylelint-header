{
  "name": "stylelint-header",
  "version": "3.0.0",
  "description": "A stylelint plugin that checks for a file header.",
  "license": "Apache-2.0",
  "author": "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/castastrophe/stylelint-header.git"
  },
  "bugs": {
    "url": "https://github.com/castastrophe/stylelint-header/issues"
  },
  "type": "module",
  "exports": "./index.js",
  "module": "index.js",
  "files": [
    "index.js",
    "!test/*"
  ],
  "scripts": {
    "coverage": "yarn test --coverage --coverageReporters=cobertura",
    "postinstall": "husky || true",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepublish": "yarn test",
    "semantic-release": "semantic-release",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "watch": "yarn test --watch"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "string-similarity": "^4.0.4"
  },
  "peerDependencies": {
    "stylelint": ">=16"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.2",
    "@semantic-release/npm": "^13.0.0",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "cross-env": "^10.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "jest-preset-stylelint": "^8.0.0",
    "lint-staged": "^16.0.0",
    "pinst": "^3.0.0",
    "prettier": "^3.5.3",
    "prettier-package-json": "^2.8.0",
    "semantic-release": "^24.2.3",
    "stylelint": "^16.19.1"
  },
  "keywords": [
    "css",
    "header",
    "linter",
    "stylelint",
    "stylelint-plugin"
  ],
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": [
    {
      "type": "github",
      "url": " https://github.com/sponsors/castastrophe"
    }
  ],
  "jest": {
    "preset": "jest-preset-stylelint"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  },
  "packageManager": "yarn@4.9.1"
}
